<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/choice_wc"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_choice_select"
        android:padding="8dp"
        android:src="@drawable/baseline_wc_24" />


    <ImageView
        android:id="@+id/choice_fastfood"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_choice"
        android:padding="8dp"
        android:src="@drawable/baseline_fastfood_24" />

    <ImageView
        android:id="@+id/choice_cafe"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_choice"
        android:padding="8dp"
        android:src="@drawable/baseline_local_cafe_24" />

    <ImageView
        android:id="@+id/choice_gas_station"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_choice"
        android:padding="4dp"
        android:src="@drawable/baseline_local_gas_station_24" />

    <ImageView
        android:id="@+id/choice_movies"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_choice"
        android:padding="8dp"
        android:src="@drawable/baseline_local_movies_24" />

    <ImageView
        android:id="@+id/choice_parking"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_choice"
        android:padding="4dp"
        android:src="@drawable/baseline_local_parking_24" />

    <ImageView
        android:id="@+id/choice_pharmacy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_choice"
        android:padding="8dp"
        android:src="@drawable/baseline_local_pharmacy_24" />

    <ImageView
        android:id="@+id/choice_park"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_choice"
        android:padding="4dp"
        android:src="@drawable/baseline_park_24" />

    <ImageView
        android:id="@+id/choice_ev_station"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_choice"
        android:padding="8dp"
        android:src="@drawable/baseline_ev_station_24" />

</LinearLayout>